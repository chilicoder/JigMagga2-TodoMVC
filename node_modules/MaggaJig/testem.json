{
    "framework": "mocha",
    "serve_files": ["test/browserified.js"],
    "src_files": [
        "src/*",
        "test/setup.js",
        "test/*.test.js"
    ],
    "launchers": {
        "node": {
            "command": "NODE_PATH=./src ./node_modules/.bin/mocha -r test/setup.js -R tap test/**/*.test.js",
            "protocol": "tap"
        }
    },
    "before_tests": "gulp | NODE_PATH=./src ./node_modules/.bin/browserify test/**/*.js test/*.js -o test/browserified.js",
    "on_exit": "rm test/browserified.js",
    "launch_in_dev": [
        "node",
        "firefox",
        "chrome"
    ],
    "launch_in_ci": ["node"]
}
